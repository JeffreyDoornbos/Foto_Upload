@page
@model Foto_Upload.Pages.FotoGridModel
@{
    ViewData["Title"] = "Foto's";
}

<h1>Foto's'</h1>

<div class="row">
    @foreach (var photo in Model.Photos)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@photo.FullImagePath" class="card-img-top" alt="@photo.FileName">
                <div class="card-body">
                    <h5 class="card-title">@photo.FileName</h5>
                    <p class="card-text">Uploaded by: @photo.UploadedBy</p>
                    <p class="card-text">Event: @photo.Evenement</p>
                </div>
            </div>
        </div>
    }
</div>
